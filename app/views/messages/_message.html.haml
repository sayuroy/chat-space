.main__message
  .main__message_info
    .main__message_info_user-name
      = message.user.name
    .main__message_info_date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main__message_text
    - if message.content.present?
      %p.main__message_text_content
        = message.content
    = image_tag message.image.url, class: 'main__message_image' if message.image.present?

